<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="skin.support.mobile.demo">

    <application
        android:name="skin.core.mobile.demo.SkinApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="skin.core.mobile.demo.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="skin.core.mobile.demo.activity.MainActivity" />
        <activity
            android:name="skin.core.mobile.demo.activity.AboutActivity"
            android:label="@string/about" />
        <activity
            android:name="skin.core.mobile.demo.activity.ColorPickerActivity"
            android:label="@string/skin_name_color_picker" />
    </application>

</manifest>